<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_tab"/>


    <com.bigscreen.iconictabbar.view.IconicTabBar
        android:id="@+id/tab_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:stateListAnimator="@null"
        android:background="@drawable/tab_bar_background"
        app:barBackground="@android:color/transparent"
        app:tabDefaultColor="@color/gray"
        android:paddingVertical="12dp"
        app:tabSelectedColor="@color/colorAccent"
        app:tabFromMenu="@menu/tabs"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>