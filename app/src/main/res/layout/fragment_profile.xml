<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/superLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainrel">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_background"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_white_icons"/>

            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="250dp"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_shadow_10"
                android:id="@+id/card_rel">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:id="@+id/profile_image" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:id="@+id/progress_bar"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/profile_image"
                    android:fontFamily="@font/spd_medium"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:textSize="22dp"
                    android:text=""
                    android:id="@+id/tv_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_name"
                    android:fontFamily="@font/spd_medium"
                    android:textColor="@color/light_black_60"
                    android:textSize="16dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:id="@+id/tv_number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_number"
                    android:fontFamily="@font/spd_medium"
                    android:textColor="@color/light_black_60"
                    android:textSize="16dp"
                    android:text=""
                    android:id="@+id/tv_email"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_below="@id/card_rel"
                android:fontFamily="@font/spd_semibold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:textSize="24dp"
                android:text="Your Fitness Dream"
                android:id="@+id/tv_fitness_dream"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/orange_rectangle_10"
                android:fontFamily="@font/spd_medium"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_below="@id/tv_fitness_dream"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:id="@+id/tv_health_goal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Logout"
                android:textSize="24dp"
                android:padding="8dp"
                android:textColor="@color/white"
                android:layout_below="@id/tv_health_goal"
                android:layout_centerHorizontal="true"
                android:background="@drawable/orange_rectangle_10"
                android:id="@+id/logout"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>