<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/superLayout"
    android:background="@color/white"
    tools:context=".Login.VerifyNumberActivity">

<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="16dp"
        android:padding="24dp"
        android:id="@+id/mainrel">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hiwe_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/top_logo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Number"
            android:layout_below="@id/top_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/spd_semibold"
            android:textSize="32dp"
            android:id="@+id/tv_verify"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_verify_phone"
            android:layout_below="@id/tv_verify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/img_verify_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your phone number"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/spd_medium"
            android:layout_below="@id/img_verify_phone"
            android:layout_marginTop="40dp"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/tv_bottom"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bottom"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/number_rel">

            <EditText
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/orange_25_rectangle_5"
                android:text="+91"
                android:textAlignment="center"
                android:enabled="false"
                android:textColor="@color/black"
                android:id="@+id/et_left"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/orange_25_rectangle_5"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_toRightOf="@id/et_left"
                android:textColor="@color/black"
                android:inputType="phone"
                android:id="@+id/et_number"/>


        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:layout_below="@id/number_rel"
            android:background="@drawable/orange_rectangle_10"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/spd_semibold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/btn_send"/>



    </RelativeLayout>
</ScrollView>


</RelativeLayout>