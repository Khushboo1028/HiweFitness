<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_orange_yellow_gradient"
    tools:context=".Workout.WorkoutFragment">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/center_rel">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hiwe_circle"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_hiwe_logo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spd_semibold"
            android:textColor="@color/white"
            android:layout_below="@id/img_hiwe_logo"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="24dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="This is workout tab. It changes dynamically according to each customer."
            android:textSize="24dp"
            android:id="@+id/tv_thanks"/>


    </RelativeLayout>



</RelativeLayout>